set default-bg                  "#11121D"
set default-fg                  "#A0A8CD"

set render-loading              true
set render-loading-fg           "#11121D"
set render-loading-bg           "#A0A8CD"

# Recolor mode settings
set recolor-lightcolor          "#12121d" # Background
set recolor-darkcolor           "#DDDDDD" # Foreground

# Startup options
set adjust-open width
set recolor true
