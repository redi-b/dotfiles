# Basic Settings

set font "Product Sans 9"
set highlight-transparency .4
set zoom-center "true"
set selection-clipboard clipboard
set render-loading "false"
map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map b recolor


# theme

# Light/Default mode settings:
set notification-error-bg       "#f44737"
set notification-error-fg       "#A0A8CD"
set notification-warning-bg     "#FFFF44"
set notification-warning-fg     "#11121D"
set notification-bg             "#11121D"
set notification-fg             "#af88F1"

set completion-bg               "#2d2d30"
set completion-fg               "#A0A8CD"
set completion-group-bg         "#2d2d30"
set completion-group-fg         "#A0A8CD"
set completion-highlight-bg     "#062c45"
set completion-highlight-fg     "#A0A8CD"

set index-bg                    "#11121D"
set index-fg                    "#A0A8CD"
set index-active-bg             "#af88e1"
set index-active-fg             "#282a36"

set inputbar-bg                 "#1588ff"
set inputbar-fg                 "#11121D"
# set statusbar-bg                "#1588FF"
# set statusbar-bg                "#00796B"
set statusbar-bg                "#005577"
set statusbar-fg                "#ffffff" 

set highlight-color             "#FF5555"
